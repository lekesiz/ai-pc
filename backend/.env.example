# Application
APP_NAME="AI-PC System"
APP_VERSION="1.0.0"
DEBUG=True

# Server
HOST=0.0.0.0
PORT=8000
RELOAD=True

# Database
DATABASE_URL=postgresql+asyncpg://ai_user:ai_password@localhost/ai_pc_db

# Redis
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-here-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# AI API Keys (Get these from respective platforms)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_AI_API_KEY=

# AI Configuration
# Default to GPT-3.5 Turbo for cost efficiency (~90% cheaper than GPT-4)
# Users can switch to GPT-4, Claude, or Gemini as needed
DEFAULT_AI_MODEL=gpt-3.5-turbo
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=2000

# Whisper Configuration
WHISPER_MODEL=whisper-1
AUDIO_MAX_SIZE_MB=25

# Gmail API (Optional)
GMAIL_CREDENTIALS_FILE=
GMAIL_TOKEN_FILE=

# WebSocket
WEBSOCKET_SECRET_KEY=websocket-secret-key-change-in-production
WEBSOCKET_PING_INTERVAL=25
WEBSOCKET_PING_TIMEOUT=10

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60